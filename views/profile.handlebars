<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{projects.user.name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New blogpost:</h3>

    <div class="form new-blogpost-form">
      <div class="form-group">
        <label for="blogpost-name">Blogpost name:</label>
        <input class="form-input" type="text" id="blogpost-name" name="blogpost-name" />
      </div>
      
      <div class="form-group">
        <label for="blogpost-desc">description:</label>
        <textarea class="form-input" id="blogpost-desc" name="blogpost-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary create">Create</button>
      </div>
    </div>
  </div>

  <div class="col-md-6 blogpost-list">
    <h3>Current blogpost:</h3>

    {{#each projects }}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blogpost/{{id}}">{{name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
</div>

<script src="./js/profile.js"></script>
